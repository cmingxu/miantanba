<!DOCTYPE HTML>
<html>
  <head>
    <title>面谈吧</title>
    <%=stylesheet_link_tag "site" %>
    <%=stylesheet_link_tag "front" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery.cookie.js" %>
    <%= javascript_include_tag "front" %>
    <%= yield :head %>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <img src="/images/logo.png" />
        <div class="changeCity">
          <%= current_city.name %> <a href="#" id="changeCityLink">切换城市</a>
          <%= render :partial => 'layouts/cities' %>
        </div>
        <span class="title">走出门，面谈吧，活动等你来参加</span>
        <%=render :partial=>"layouts/top_info"%>
        <a class="newActivityLink" href="/activities/new">我要发起活动</a>
      </div>
      <div class="main">
        <%=yield %>
      </div>
      <div id="bottom">
        <%= render :partial =>  'layouts/bottom' %>
      </div>
    </div>
  </body>
</html>
